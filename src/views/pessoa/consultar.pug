extends ../layout

block content
  body.bg-light.text-dark

    include ../header
    hr

    div(class="container home-page")
      h2.text-center Confirmar Presen√ßa
      div(class="row justify-content-center")
        div(class="col-md-7 col-sm-12")
          div(id="alert-list" class="alert alert-danger d-none" role="alert")
      form
        div(class="row justify-content-center")
          div(class="col-md-7 col-sm-12")
